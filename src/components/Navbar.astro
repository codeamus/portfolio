---
import IconLinkedin from "@assets/icons/linkedin-white.astro";
import Logo from "@assets/img/logos/logo.webp";

const SOCIAL_LINKS = [
  {
    Icon: IconLinkedin,
    url: "https://www.linkedin.com/in/codeamus/",
    label: "Ver perfil de LinkedIn",
  },
];

const WHATSAPP_URL =
  "https://wa.me/569XXXXXXXX?text=Hola%20Matías,%20quiero%20una%20landing%20page%20para%20mi%20negocio.";
---

<nav
  class="sticky top-0 z-20 flex items-center justify-between bg-[#050816]/80 px-6 py-4 backdrop-blur-sm md:px-12 xl:px-72"
>
  <a
    class="flex items-center gap-2"
    href="/"
    aria-label="Volver al inicio de Codeamus"
  >
    <img
      class="w-full max-w-[120px] transition-transform duration-300 hover:scale-105"
      src={Logo.src}
      alt="Logo de Codeamus"
      loading="lazy"
    />
  </a>

  <div class="flex items-center gap-6">
    <ul
      class="hidden items-center gap-4 text-xs font-medium text-white md:flex"
    >
      <li>
        <a href="#servicios" class="transition-colors hover:text-[#7477FF]">
          Servicios
        </a>
      </li>
      <li>
        <a href="#proyectos" class="transition-colors hover:text-[#7477FF]">
          Proyectos
        </a>
      </li>
      <li>
        <a href="#sobre-mi" class="transition-colors hover:text-[#7477FF]">
          Sobre mí
        </a>
      </li>
    </ul>

    <a
      href={WHATSAPP_URL}
      target="_blank"
      rel="noopener noreferrer"
      class="hidden items-center rounded-full bg-[#7477FF] px-4 py-2 text-xs font-semibold uppercase tracking-wide text-white transition-all duration-300 hover:bg-[#8a8dff] sm:inline-flex"
    >
      Hablemos de tu sitio
    </a>

    <ul class="flex items-center gap-2">
      {
        SOCIAL_LINKS.map(({ Icon, url, label }) => (
          <li>
            <a
              class="flex items-center rounded-md p-2 text-xs text-white transition-colors duration-300 hover:bg-[#7477FF]"
              rel="noopener noreferrer"
              aria-label={label}
              href={url}
              target="_blank"
            >
              <Icon class="size-5" />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
